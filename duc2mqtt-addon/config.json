{
  "name": "DUC2MQTT",
  "version": "0.0.1",
  "slug": "duc2mqtt",
  "description": "DUC2MQTT connects dynamic DNS updates to MQTT for use in Home Assistant.",
  "arch": ["amd64"],
  "startup": "application",
  "boot": "auto",
  "ingress": false,
  "options": {
    "mqtt_url": "tcp://test.mosquitto.org:1883",
    "mqtt_unique_id": "duccer",
    "mqtt_topic_prefix": "homeassistant",
    "duc_url": "http://foo:bar@192.168.0.0",
    "duc_disallowed_prefixes": ["1.dm.", "1.al.", "1.am."],
    "interval_seconds": 30
  },
  "schema": {
    "mqtt_url": "str",
    "mqtt_unique_id": "str",
    "mqtt_topic_prefix": "str",
    "duc_url": "str",
    "duc_disallowed_prefixes": ["str"],
    "interval_seconds": "int"
  },
  "environment": {
    "MQTT_URL": "!!options.mqtt_url",
    "MQTT_UNIQUE_ID": "!!options.mqtt_unique_id",
    "MQTT_TOPIC_PREFIX": "!!options.mqtt_topic_prefix",
    "DUC_URL": "!!options.duc_url",
    "INTERVAL_SECONDS": "!!options.interval_seconds"
  },
  "init": true,
  "init_commands": [
    "python3 /config/write_config.py"
  ],
  "image": "sourceforgery/duc2mqtt:v0.0.2",
  "url": "https://github.com/SourceForgery/duc2mqtt",
  "map": ["config:rw"]
}